# Configuración de la aplicación
APP_NAME=Terraverde
#APP_ENV=local
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Firebase (mantener si lo usas)
FIREBASE_PROJECT_ID=tu-proyecto-firebase
FIREBASE_PRIVATE_KEY_ID=tu-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTU_PRIVATE_KEY_AQUI\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@tu-proyecto.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789012345678901
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40tu-proyecto.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=tu-proyecto.appspot.com
GOOGLE_MAPS_API_KEY=tu-api-key

# Base de datos MySQL (AGREGAR ESTO)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=terraverde_db
DB_USERNAME=root
DB_PASSWORD=root

# Configuración de la base de datos
DB_CONNECTION=mysql
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# JWT Configuration
JWT_SECRET=tu-secreto-jwt-muy-seguro-aqui
JWT_EXPIRATION=3600

# Log Configuration
LOG_LEVEL=debug
LOG_CHANNEL=daily
