{
  "name": "terraverde-project",
  "version": "1.0.0",
  "description": "Plataforma web para el registro y catalogación de especies en ecosistemas terrestres y acuáticos",
  "main": "index.js",
  "scripts": {
    "install-all": "cd frontend && npm install && cd ../backend && composer install",
    "start-frontend": "cd frontend && ng serve",
    "start-backend": "cd backend && php artisan serve",
    "build-frontend": "cd frontend && ng build --prod",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "setup": "echo 'Setting up Terraverde Project...' && npm run install-all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NLindao2004/ProyectoLP_2P.git"
  },
  "keywords": [
    "biodiversity",
    "species",
    "ecosystem",
    "angular",
    "php",
    "firebase",
    "laravel"
  ],
  "authors": [
    "Benites Alex",
    "Lindao Nehemias", 
    "Zavala Fernando"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
